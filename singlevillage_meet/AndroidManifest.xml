<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.singlevillage.meet.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />
    <!-- 手机振动的权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 指定添加安装快捷方式的权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" /> 
    <application
        android:name="com.singlevillage.meet.activity.MyApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.singlevillage.meet.activity.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.singlevillage.meet.activity.LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.RegisterActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>

        <service android:name="com.singlevillage.meet.activity.GetMsgService" >
        </service>

        <activity
            android:name="com.singlevillage.meet.activity.FriendListActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity android:name="com.singlevillage.meet.activity.Tab1" >
        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.Tab2"
            android:launchMode="singleTask" >
        </activity>
        <activity android:name="com.singlevillage.meet.activity.Tab3" >
        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.ChatActivity"
            android:windowSoftInputMode="adjustResize" >

        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.RegisterInfoSettingActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >

        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.VerticalScrollTextActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.MeetActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.MeetMsgActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.singlevillage.meet.activity.MeetActivity2"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible" >

        </activity>
    </application>

</manifest>